<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
		<meta content="yes" name="apple-mobile-web-app-capable">
		<meta content="black" name="apple-mobile-web-app-status-bar-style">
		<meta content="telephone=no" name="format-detection">
		<meta content="email=no" name="format-detection">
		<title></title>
		<link rel="stylesheet" type="text/css" href="../css/reset.css"/>
		<link rel="stylesheet" type="text/css" href="../css/fontsize.css"/>
		<link rel="stylesheet" type="text/css" href="../css/register.css"/>
	</head>
	<body>
			<div class="title">
				<span>注册</span>
				<img class="titlelogo" src="../images/back.png"/>
			</div>
			<div class="reg zhanghao">
				<span>账号</span>
				<input type="text" name="username" id="username" placeholder="请输入手机号码" />
			</div>
			<div class="reg yanzheng">
				<span>验证</span>
				<input type="text" name="yanzhengma" id="yanzhengma" placeholder="请输入验证码" />
				<span class="getyzm">获取验证码</span>
			</div>
			<div class="reg mima">
				<span>密码</span>
				<input type="password" name="pwd" id="pwd" placeholder="6-16位字母和数字的密码" />
			</div>
			<button class="tijiao">提交</button>
			<span class="tip"></span>
	</body>
	<script src="../js/jquery-1.11.3.js" type="text/javascript" charset="utf-8"></script>
	<script type="text/javascript">
		var req=/^1[34578]\d{9}$/;
		$(".tip").hide();
		/**********************提示框函数**********************************/
		function yc(){
						$(".tip").hide()
				}
		$(".getyzm").click(function(){
			var code = Math.floor(Math.random()*9000)+1000;
			$(this).html(code);	
		})
		$(".tijiao").click(function(){
			/**********************用户名的基本验证*********************************************/
			var pwd=$("#pwd").val();
			var getyzm=$(".getyzm").html();
			var yzm=$("#yanzhengma").val();
			var phone = $("#username").val();
			if(phone.length!=0){
				if(req.test(phone)){
					
					if(!yzm){
						$(".tip").html("验证码不能为空");
						$(".tip").show();
						setTimeout(yc,2000);
					}else{
						if(yzm!=getyzm){
							if(!pwd){
							$(".tip").html("验证码输入不正确");
							$(".tip").show();
							setTimeout(yc,2000);
						}
						else{
							$.ajax({
								type:"get",
								url:"zc.php",
								data:{username:phone,pwd:pwd},
								dataType:"json",
								success:function(datas){
									switch(datas*1){
			                           case 0:
				                            $(".tip").html("服务器异常");
											$(".tip").show();
											setTimeout(yc,2000);
			                           break;
			                           case 1:
			                          		$(".tip").html("注册成功");
											$(".tip").show();
											setTimeout(yc,2000);
			                           break;
			                           case 2:
			                           		$(".tip").html("该用户名已存在");
											$(".tip").show();
											setTimeout(yc,2000);
			                           break;
			                           default:
			                           break;
			                       }
								}
							});
						}
						}else{
							$(".tip").html("验证码不正确");
							$(".tip").show();
							setTimeout(yc,2000);
						}
					}
					
					
				}else{
					$(".tip").html("手机号格式不正确");
					$(".tip").show();
					
					setTimeout(yc,2000);
				}
			}else{
				$(".tip").html("手机号不能为空");
				$(".tip").show();
				setTimeout(yc,2000);
			}
			
			/******************************ajax**********************************************/
			
			
		})
	</script>
</html>
